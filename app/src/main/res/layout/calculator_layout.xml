<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rectangle"
        android:text="C"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rectangle"
        android:text="+/—"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:background="@drawable/shape_rectangle"
        android:text="%"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:text="/"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/shape_rectangle_oring"
        android:textSize="30dp"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle"
            android:text="1"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle"
            android:text="2"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle"
            android:text="3"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="X"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_rectangle_oring"
            android:textSize="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle"
            android:text="4"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle"
            android:text="5"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle"
            android:text="6"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="—"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_rectangle_oring"
            android:textSize="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle"
            android:text="7"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle"
            android:text="8"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle"
            android:text="9"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:text="+"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_rectangle_oring"
            android:textSize="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:paddingLeft="42dp"
            android:text="0"
            android:textSize="30dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rectangle"
            android:text="."
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="30dp"/>
        <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="="
        android:gravity="center"
        android:layout_weight="1" android:background="@drawable/shape_rectangle_oring"
        android:textSize="30dp"/>

    </LinearLayout>
</LinearLayout>